# .env.example

# ----------------------------
# Application
# ----------------------------
NODE_ENV=development
API_PORT=4000
API_HOST=0.0.0.0
CORS_ORIGIN=http://localhost:3000
API_PREFIX=/api/v1

# ----------------------------
# JWT & Security
# ----------------------------
ACCESS_TOKEN_SECRET=your_super_secret_access_token_key_32_chars
REFRESH_TOKEN_SECRET=your_super_secret_refresh_token_key_32_chars
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d
PASSWORD_RESET_TOKEN_EXPIRY=10m

# Argon2 Password Hashing Options
ARGON2_TIME_COST=3
ARGON2_MEMORY_COST=65536 # 64MB
ARGON2_PARALLELISM=1

# ----------------------------
# Database (MongoDB)
# ----------------------------
MONGO_URI=mongodb://root:password@mongo:27017/devnovate_db?authSource=admin

# ----------------------------
# Cache (Redis)
# ----------------------------
REDIS_URI=redis://redis:6379
CACHE_TTL_SECONDS=300 # 5 minutes

# ----------------------------
# Kafka
# ----------------------------
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=devnovate-app
KAFKA_GROUP_ID=devnovate-group

# ----------------------------
# Worker Configuration
# ----------------------------
WORKER_BATCH_SIZE=100
WORKER_FLUSH_INTERVAL_MS=5000 # 5 seconds

# ----------------------------
# Mailer (Mailhog for local dev)
# ----------------------------
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USER=
MAIL_PASS=
MAIL_FROM_ADDRESS="Devnovate <noreply@devnovate.com>"

# ----------------------------
# Observability
# ----------------------------
LOG_LEVEL=info